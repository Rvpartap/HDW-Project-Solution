@page
@model LoginModel

@{
    ViewData["Title"] = "Log In";
}

<link rel="stylesheet" href="~/css/login.css" />
<body>
    <main style="background-color: rgb(250, 250, 250); width: 70rem; height: 40rem; border-radius: 2rem; box-shadow: 0px 0px 20px 20px #00000050">
        <form id="account" method="post" style="padding: 30px 40px 30px 35px; position: relative; width: 50rem;">
            <h1><i class="fa-solid fa-right-to-bracket fa-lg"></i> &nbsp; Accedi</h1>
            <br />
            <h4>Siamo felicissimi di rivederti!</h4>
            <br />
            <div class="col-8">
                <label class="h5 form-label" asp-for="Input.Email"><i class="fa-solid fa-at"></i> &nbsp; E-Mail</label>
                <input type="email" class="form-control" asp-for="Input.Email" placeholder="→ nome@esempio.dominio ←" required>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="col-8" style="padding-top: 5px;">
                <label class="h5 form-label" asp-for="Input.Password"><i class="fa-solid fa-key"></i> &nbsp; Password</label>
                <input type="password" class="form-control" asp-for="Input.Password" placeholder="→ Inserisci la password ←" maxlength="20" required>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="Input.RememberMe">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
            </div>
            <br />
            <button type="submit" class="btn btn-primary" style="font-size: 20px; margin-top: -8px;">Accedi</button>
            <br /><br />
            <h6>Hai dimenticato la tua password? &nbsp;<a id="forgot-password" asp-page="./ForgotPassword" style="text-decoration: none; color: #0d6efd;">Reimposta ora!</a></h6>
            <h6>Non hai un account? &nbsp;<a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" style="text-decoration: none; color: #0d6efd;">Registrati</a></h6>
        </form>
        <br />
        <div style="position: absolute; left: 49.60%; top: 3.4rem;">
            <img src="~/img/Sign-in.jpg" draggable="false" style="height: 560px; width: 495px; border-radius: 0px 30px 30px 0px;" />
        </div>
        <div id="mycopyright">
            <a href="#" style="text-decoration: none;" id="copyright">CopyRight 2022 - HowDataWork.it - Rathour Vinay Partap Singh &nbsp; &nbsp; <i class="fa-solid fa-copyright fa-lg"></i>&nbsp;</a>
        </div>
    </main>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
