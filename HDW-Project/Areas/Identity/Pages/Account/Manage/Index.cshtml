@page
@model IndexModel
@{
    ViewData["Title"] = "Profilo Utente";
}
<link rel="stylesheet" href="~/css/ManageAccount.css" />
<body>
    <main style="background-color: rgb(250, 250, 250); width: 85rem; height: 40rem; border-radius: 2rem; box-shadow: 0px 0px 20px 20px #00000050">
        <main style="padding: 2px 10px 2px 20px; float: left; margin-top: 10px; margin-bottom: 10px; position: relative; width: 25rem; height: 38.60rem; border-right: solid #b6b6b6 1px;">
            <h2>Gestisci il tuo Account</h2>
            <h6>Qui puoi gestire i dati del tuo account, fare azioni di tipo modificare i tuoi dati, rafforzarli o eliminare il tuo account dal Database del HowDataWork.it</h6>
            <hr />
            <ul class="nav nav-pills flex-column" style="margin-bottom: 17.50rem; margin-left: -15px; margin-top: -10px;">
                <li class="nav-item"><a class="nav-link link-dark" id="profile" asp-page="./Index"><i class="fa-solid fa-arrow-right fa-lg"></i> &nbsp;Profilo Utente</a></li>
                <li class="nav-item"><a class="nav-link link-dark" id="change-password" asp-page="./ChangePassword"><i class="fa-solid fa-arrow-right fa-lg"></i> &nbsp;Cambia la Password</a></li>
                <li class="nav-item"><a class="nav-link link-dark" id="personal-data" asp-page="./PersonalData"><i class="fa-solid fa-arrow-right fa-lg"></i> &nbsp;I tuoi Dati Personali</a></li>
            </ul>
            <hr />
            <div style="bottom: 0;">
                <h6><i class="fa-solid fa-house-chimney"></i> &nbsp;Clicca per tornare alla <a style="text-decoration: none;" href="https://localhost:44382"><kbd>Pagina Home</kbd></a></h6>
                <h6><i class="fa-solid fa-life-ring"></i> &nbsp;Server Aiuto? Clicca <a style="text-decoration: none;" href="mailto:vinay.rathour@stu.fondazioneikaros.org"><kbd>QUI</kbd></a></h6>
            </div>
        </main>
        <form id="manage-account" method="post" style="padding: 2px 20px 10px 10px; margin-top: 10px; margin-bottom: 10px; float: right; position: relative; width: 60rem; height: 38.60rem;">
            <h2 style="margin-bottom: 20px;"><i class="fa-solid fa-child"></i>&nbsp;Profilo Utente</h2>
            <partial name="_StatusMessage" model="Model.StatusMessage" />
            <div style="margin-top: 20px;">
                <div class="alert alert-warning" role="alert">
                    <p class="text-danger" style="margin-bottom: 0px"><u>Nome Utente</u> è il dato fondamentale per accedere all'area riservata, non può subbire nessuna modifica!</p>
                </div>
                <label class="h5" asp-for="Username"><i class="fa-solid fa-file-signature"></i>&nbsp;Nome Utente</label>
                <input asp-for="Username" class="form-control" style="width: 25rem;" disabled />
            </div>
            <div style="margin-top: 20px; margin-bottom: 20px;">
                <label class="h5" asp-for="Input.PhoneNumber"><i class="fa-solid fa-phone"></i>&nbsp;Numero di Telefono</label>
                <input type="tel" asp-for="Input.PhoneNumber" class="form-control" style="width: 25rem;">
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary" id="update-profile-button" style="font-size: 15px; margin-top: -8px;">Salva e Aggiorna</button>
        </form>
        <div id="mycopyright">
            <a href="#" style="text-decoration: none;" id="copyright">CopyRight 2022 - HowDataWork.it - Rathour Vinay Partap Singh &nbsp; &nbsp; <i class="fa-solid fa-copyright fa-lg"></i>&nbsp;</a>
        </div>
    </main>
</body>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}