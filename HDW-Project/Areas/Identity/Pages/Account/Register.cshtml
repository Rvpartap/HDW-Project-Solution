@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<link rel="stylesheet" href="~/css/register.css" />
<body>
    <main style="background-color: rgb(250, 250, 250); width: 70rem; height: 40rem; border-radius: 2rem; box-shadow: 0px 0px 20px 20px #00000050">
        <form asp-route-returnUrl="@Model.ReturnUrl" style="padding: 30px 40px 30px 35px; position: relative; width: 50rem;" method="post">
            <h1><i class="fa-solid fa-user-plus fa-lg"></i> &nbsp; Registrati</h1>
            <br />
            <h4>Crea il tuo nuovo account. È gratis!</h4>
            <br />
            <div class="col-8">
                <label class="h5 form-label" asp-for="Input.Email"><i class="fa-solid fa-at"></i> &nbsp; E-Mail</label>
                <input type="email" class="form-control" asp-for="Input.Email" placeholder="→ nome@esempio.dominio ←" required>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="col-8" style="padding-top: 5px;">
                <label class="h5 form-label" asp-for="Input.Password"><i class="fa-solid fa-key"></i> &nbsp; Password</label>
                <input type="password" class="form-control" asp-for="Input.Password" placeholder="→ Crea la tua password (max: 20) ←" maxlength="20" required>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="col-8" style="padding-top: 5px;">
                <label class="h5 form-label" asp-for="Input.ConfirmPassword"><i class="fa-solid fa-user-lock"></i> &nbsp; Conferma la tua password</label>
                <input type="password" class="form-control" asp-for="Input.ConfirmPassword" placeholder="→ Ripeti la password creata ←" maxlength="20" required>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <br />
            <input type="checkbox" class="form-check-input" id="flexCheckDefault" required> 
            <label class="form-check-label" for="flexCheckDefault">&nbsp; Ho letto e accetto i <a href="#" style="text-decoration: none; color: black;">Termini e Condizioni</a> e la <a href="#" style="text-decoration: none; color: black;">Polizia sulla Privacy</a></label>
            <br /><br />
            <button class="btn btn-primary" style="font-size: 20px; margin-top: -8px;">Registrati</button>
            <br /><br />
            <h6>Hai già un'account? &nbsp;<a asp-page="./Login" style="text-decoration: none; color: #0d6efd;">Accedi</a></h6>
        </form>
        <br />
        <div style="position: absolute; left: 49.60%; top: 3.4rem;">
            <img src="~/img/Sign-up.jpg" draggable="false" style="height: 560px; width: 495px; border-radius: 0px 30px 30px 0px;" />
        </div>
        <div id="mycopyright">
            <a href="#" style="text-decoration: none;" id="copyright">CopyRight 2022 - HowDataWork.it - Rathour Vinay Partap Singh &nbsp; &nbsp; <i class="fa-solid fa-copyright fa-lg"></i>&nbsp;</a>
        </div>
    </main>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
