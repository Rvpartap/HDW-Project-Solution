@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reimposta la Password";
}

<link rel="stylesheet" href="~/css/ResetPassword.css" />
<body>
    <main style="background-color: rgb(250, 250, 250); width: 70rem; height: 40rem; border-radius: 2rem; box-shadow: 0px 0px 20px 20px #00000050">
        <form method="post" style="padding: 30px 40px 30px 25px; position: relative; width: 50rem;">
            <h2><i class="fa-solid fa-lock-open fa-lg"></i>&nbsp;<i class="fa-solid fa-key fa-lg"></i> &nbsp; Reimposta la Password</h2>
            <h5 style="width: 30.50rem; padding-top: 10px; padding-bottom: 10px; font-size: 15px;">Ci siamo! Ti basta inserire l' e-mail che hai usato per la richiesta <b>Reset Password</b>, poi inserisci la <b>Nuova Password</b> e clicca su <kbd>Conferma</kbd>, ora la tua password è stata Reimposta!</h5>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Input.Code" type="hidden" />

            <div class="col-8">
                <label asp-for="Input.Email" class="h5 form-label"><i class="fa-solid fa-at"></i> &nbsp; Inserisci la tua E-Mail</label>
                <input type="email" asp-for="Input.Email" class="form-control" placeholder="→ nome@esempio.dominio ←" required />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="col-8" style="padding-top: 5px;">
                <label asp-for="Input.Password" class="form-label"><i class="fa-solid fa-key"></i> &nbsp; Reimposta la tua password</label>
                <input type="password" asp-for="Input.Password" class="form-control" placeholder="→ Crea la tua nuova password (max: 20) ←" maxlength="20" required />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="col-8" style="padding-top: 5px;">
                <label asp-for="Input.ConfirmPassword" class="form-label"><i class="fa-solid fa-user-lock"></i> &nbsp; Conferma la tua nuova password</label>
                <input type="password" asp-for="Input.ConfirmPassword" class="form-control" placeholder="→ Ripeti la password creata ←" maxlength="20" required />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <br />
            <button class="btn btn-primary" style="font-size: 20px; margin-top: -8px;">Conferma</button>
        </form>
        <br />
        <div style="position: absolute; left: 49.60%; top: 3.4rem;">
            <img src="~/img/Reset-Password.jpg" draggable="false" style="width: 495px; height: 560px;  border-radius: 0px 30px 30px 0px;" />
        </div>
        <div id="mycopyright">
            <a href="#" style="text-decoration: none;" id="copyright">CopyRight 2022 - HowDataWork.it - Rathour Vinay Partap Singh &nbsp; &nbsp; <i class="fa-solid fa-copyright fa-lg"></i>&nbsp;</a>
        </div>
    </main>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
